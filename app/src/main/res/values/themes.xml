<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.IIYY" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/light_blue_700</item>
        <item name="colorSecondary">@color/gray_500</item>
        <item name="colorAccent">@color/light_blue_500</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="android:colorBackground">@color/gray_50</item>

        <item name="android:textColor">@color/black</item>

        <!-- 상태바 회색 반투명으로 설정 -->
        <item name="android:windowTranslucentStatus">true</item>

        <!-- api 27 이상이면 네비게이션 바 색을 bottomNav와 같게 함 -->
        <item name="android:navigationBarColor" tools:targetApi="27">?attr/colorSurface</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="Theme.IIYY" parent="Base.Theme.IIYY"/>

    <style name="Theme.IIYY.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.IIYY.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar"/>
    
    <style name="Theme.IIYY.BaseLayoutMargin">
        <item name="android:layout_margin">@dimen/base_layout_margin</item>
    </style>
</resources>
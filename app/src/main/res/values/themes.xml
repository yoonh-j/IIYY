<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.IIYY" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/light_blue_700</item>
        <item name="colorSecondary">@color/light_blue_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/light_blue_500</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="android:colorBackground">@color/gray_50</item>

        <item name="android:textColor">@color/black</item>

        <!-- 상태바를 toolbar 색상, 글자를 어두운 색으로 설정 -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- api 27 이상이면 네비게이션 바 색을 bottomNav와 같게 함 -->
        <item name="android:navigationBarColor" tools:targetApi="27">?attr/colorSurface</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="Theme.IIYY" parent="Base.Theme.IIYY"/>

    <style name="Theme.IIYY.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.IIYY.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar"/>
    
    <style name="Theme.IIYY.BaseLayoutMargin">
        <item name="android:layout_margin">@dimen/base_layout_margin</item>
    </style>

    <style name="Theme.IIYY.ListItemMargin">
        <item name="android:layout_marginStart">@dimen/list_item_margin</item>
        <item name="android:layout_marginEnd">@dimen/list_item_margin</item>
        <item name="android:layout_marginBottom">@dimen/list_item_margin</item>
    </style>

    <style name="Theme.IIYY.CalendarHeaderText" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.IIYY.Dialog" parent="Theme.AppCompat.Dialog">
        <!-- dialog 크기 -->
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="windowFixedHeightMajor">100%</item>
        <item name="windowFixedHeightMinor">100%</item>
    </style>

    <style name="Theme.IIYY.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
    </style>

    <style name="Theme.IIYY.TimePicker">
        <item name="android:colorControlNormal">?attr/colorPrimary</item>
    </style>

    <style name="Theme.IIYY.NoItemText" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>
</resources>
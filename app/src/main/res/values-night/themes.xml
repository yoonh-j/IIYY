<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.IIYY" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/light_blue_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/light_blue_700</item>
        <item name="colorSecondary">@color/gray_500</item>
        <item name="colorAccent">@color/light_blue_200</item>
        <item name="colorSurface">@color/dark_gray</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="android:colorBackground">@color/black</item>

        <item name="android:textColor">@color/white</item>

        <!-- 상태바 회색 반투명으로 설정 -->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- 네비게이션 바 투명으로 설정해서 흰색이 아닌 bottomNav 색으로 표시 -->
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

    <style name="Theme.IIYY" parent="Base.Theme.IIYY"/>

    <style name="Theme.IIYY.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.IIYY.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="Theme.IIYY.BaseLayoutMargin">
        <item name="android:layout_margin">@dimen/base_layout_margin</item>
    </style>

    <style name="Theme.IIYY.ListItemMargin">
        <item name="android:layout_marginStart">@dimen/list_item_margin</item>
        <item name="android:layout_marginEnd">@dimen/list_item_margin</item>
        <item name="android:layout_marginBottom">@dimen/list_item_margin</item>
    </style>
</resources>
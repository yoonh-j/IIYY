<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="hasItems"
            type="boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/Theme.IIYY.BaseLayoutMargin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.HomeFragment">

        <TextView
            android:id="@+id/home_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_label"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/home_label_margin_top"
            app:layout_constraintTop_toBottomOf="@id/home_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isGone="@{!hasItems}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/home_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/item_home"
                tools:itemCount="10"/>

            <TextView
                android:id="@+id/home_no_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_label_no_item_height"
                android:gravity="center"
                android:text="@string/home_no_item"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="?attr/colorSecondary"
                app:isGone="@{hasItems}"/>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>